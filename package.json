{
  "name": "my-brand-backend",
  "version": "1.0.0",
  "description": "The backend that's created to be used on the personal-portfolio",
  "main": "index.js",
  "scripts": {
    "start": "yarn build && node dist/index.js",
    "build": "rm -rf dist && tsc && yarn build:docs",
    "dev": "nodemon src/index.ts",
    "test": "jest && npx junit2json junit.xml > ./coverage/coverage-summary.json",
    "lint:doc": "npx @redocly/cli lint src/openapi.yaml",
    "run:doc": "npx @redocly/cli preview-docs src/openapi.yaml",
    "build:docs": "npx @redocly/cli build-docs src/openapi.yaml -o=./dist/docs.html --title='My Brand | APIS'"
  },
  "keywords": [
    "node",
    "typescript",
    "mongoDB",
    "mongoose"
  ],
  "author": "Chrysanthe",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-dev-server": "^10.0.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@redocly/cli": "^1.9.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.2",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "junit2json": "^3.1.5",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0"
  }
}
