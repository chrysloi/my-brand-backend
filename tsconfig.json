{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "declaration": true,
    "declarationDir": "dist/types",
    "allowJs": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "**/types/*", "dist/**"],
  "include": ["./src/*", "src/types", "**/*.js"]
}
